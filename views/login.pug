doctype html
html(lang='en')
  head
    title Nightlife Coordination #{title}
    meta(charset='utf-8')
    meta(name='description' content='Nightlife Coordination')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    // Load Styles
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css')
    link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.15.4/css/all.css')
    link(rel='stylesheet', href='/style.css')
  body
    // Navbar
    nav(class='navbar navbar-expand-lg navbar-dark bg-primary')
      article(class='container-fluid')
        a(class='navbar-brand' href='/' style='color: yellow;') Nightlife
        button(class='navbar-toggler' type='button' data-bs-toggle='collapse' data-bs-target='#navbarSupportedContent' aria-controls='navbarSupportedContent' aria-expanded='false' aria-label='Toggle Navigation')
          span(class='navbar-toggler-icon')
      article(class='collapse navbar-collapse' id='navbarSupportedContent')
        // Set profile if user has logged in
        ul(class='navbar-nav mr-auto')
          if (user)
            li(class='nav-item active')
              a(class='nav-link' href='/profile/') Profile
                span(class='sr-only') (current)   
        // Right Align Navs
        ul(class='nav justify-content-end')
          // If there is a user
          if (user)
            li(class='nav-item')
              a(class='nav-link' href='/profile/') #{user.local.username || user.facebook.email}
            li(class='nav-item')
              a(class='nav-link' href='/auth/logout') Log Out
          else
            li(class='nav-item')
              a(class='nav-link' href='/auth/signup') Sign Up
            li(class='nav-item')
              a(class='nav-link' href='/auth/login') Log In
    // Apply Container for warning message(s)
    article(class='container-fluid')
      // If the message is not blank
      if (message.length > 0)
        article(class='alert alert-warning' role='alert')
          strong #{message}
      // Set Up Log In Form
      form(action='/auth/login' method='post' id='loginForm' style='width:400px; height:350px; margin-top:10%; border:1px solid grey; border-radius:2%; padding:20px 20px 10px 20px;' class='mr-auto ml-auto')
        h3(class='text-center') Log In &nbsp;
          i(class='fas fa-sign-in-alt')
        article(class='mb-3')
          label(for='email' class='form-label') Email
          input(type='email' class='form-control' placeholder='Email' name='email')
        article(class='mb-3')
          label(for='password' class='form-label') Password
          input(type='password' placeholder='Password' class='form-control' name='password')
        // Center button
        article(class='d-grid gap-2 d-flex justify-content-center')
          input(type='submit' class='btn btn-default me-2' value='Log In')
          a(href='/auth/facebook' class='btn btn-primary')
            span(class='fab fa-facebook') Login With Facebook
    // Load Scripts
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')